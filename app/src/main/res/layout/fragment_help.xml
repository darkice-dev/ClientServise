<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Gray"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/Gray"/>

    <Button
        android:id="@+id/btn_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:text="Как записаться на услугу?"
        android:paddingLeft="30dp"
        android:drawableEnd="@drawable/round_keyboard_arrow_right_black_48dp"
        android:textAlignment="viewStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/Black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:paddingLeft="15dp"
            android:text=" Необходимо зарегистрироваться / войти в аккаунт, на главной странице выбрать категорию услуг, выбрать саму услугу, в списке компаний выбрать подходящую вам, и перейти к оформлению, выбрать нужное время и адрес оказания услуги,и нажать кнопку записаться."
            android:textAlignment="viewStart"
            android:textColor="@color/Black"
            android:textSize="18sp"
            android:visibility="gone" />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:text="  Как записаться на услугу?"
        android:drawableEnd="@drawable/round_keyboard_arrow_right_black_48dp"
        android:textAlignment="viewStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/Black"/>



</LinearLayout>