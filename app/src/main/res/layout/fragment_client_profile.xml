<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="208dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:id="@+id/imageViewAvatar"
                android:background="@color/colorPrimary"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/blank_avatar_white_512_2"
                />

            <TextView
                android:id="@+id/txtUserName"
                android:background="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Клиент"
                android:textColor="@color/colorWhite"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/txtUserPhone"
                android:background="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="client@mail.com"
                android:textColor="@color/colorWhite"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_memo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/headerLayout"
            android:background="#20000000"
            android:text="Уведомления"
            android:paddingEnd="10dp"
            android:paddingStart="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:textAlignment="inherit"
            android:textColor="@color/DarkGray"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/sw_memo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_memo"
            android:background="#20000000"
            android:checked="true"
            android:text="Уведомления"
            android:paddingStart="15dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textSize="15sp"/>

        <Button
            android:id="@+id/btn_option_memo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sw_memo"
            android:background="#20000000"
            android:drawableEnd="@drawable/round_keyboard_arrow_right_black_48dp"
            android:onClick="onClickOpenNotificationSettings"
            android:paddingStart="15dp"
            android:paddingEnd="10dp"
            android:text="Настройка уведомлений"
            android:textAlignment="viewStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_another"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_option_memo"
            android:background="#20000000"
            android:text="Другое"
            android:paddingEnd="10dp"
            android:paddingStart="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:textAlignment="inherit"
            android:textColor="@color/DarkGray"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_red_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_another"
            android:background="#20000000"
            android:drawableEnd="@drawable/round_keyboard_arrow_right_black_48dp"
            android:text="Редактирование профиля"
            android:paddingStart="15dp"
            android:paddingEnd="10dp"
            android:textAlignment="viewStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textSize="15sp"/>

        <Button
            android:id="@+id/btn_help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_red_profile"
            android:background="#20000000"
            android:drawableEnd="@drawable/round_keyboard_arrow_right_black_48dp"
            android:text="Помощь"
            android:paddingStart="15dp"
            android:paddingEnd="10dp"
            android:textAlignment="viewStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textSize="15sp"/>

        <Button
            android:id="@+id/btn_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_help"
            android:background="#20000000"
            android:drawableEnd="@drawable/round_keyboard_arrow_right_black_48dp"
            android:text="О приложении"
            android:paddingStart="15dp"
            android:paddingEnd="10dp"
            android:layout_marginBottom="5dp"
            android:textAlignment="viewStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textSize="15sp"/>

        <Button
            android:id="@+id/btn_enter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_about"
            android:drawableEnd="@drawable/round_keyboard_arrow_right_black_48dp"
            android:text="Выйти"
            android:paddingStart="15dp"
            android:paddingEnd="10dp"
            android:layout_marginBottom="5dp"
            android:textAlignment="viewStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:background="#30FF0000"
            android:textSize="15sp"/>


    </RelativeLayout>

</LinearLayout>